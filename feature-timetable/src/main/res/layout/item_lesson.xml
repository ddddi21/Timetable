<?xml version="1.0" encoding="utf-8"?>
<com.example.feature_timetable.presentation.itemView.LessonItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8dp"
    android:gravity="center"
    android:background="@drawable/grey50_rounded_background"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/startTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_gravity="center"
            android:text="@string/dash"
            android:textColor="@color/endIconModeDarkGrey"
            android:textSize="@dimen/text_size_12sp" />

        <TextView
            android:id="@+id/endTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_36dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subjectTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/colorDarkBlue"
            android:textSize="@dimen/text_size_16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classroomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/lessonTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>
    </LinearLayout>

</com.example.feature_timetable.presentation.itemView.LessonItemView>