<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/auth_nav_graph" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.technokratos.splash.presentation.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment">

        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>

    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.example.feature_timetable.presentation.timetable.TimetableFragment"
        android:label="timetable_fragment"
        tools:layout="@layout/timetable_fragment">
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.feature_timetable.presentation.setiings.SettingsFragment"
        android:label="settings_fragment"
        tools:layout="@layout/settings_fragment">
    </fragment>

</navigation>