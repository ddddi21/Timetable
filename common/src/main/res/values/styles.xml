<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorControlActivated">@color/blueAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Collection.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_search</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="NavigateBack.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_navigate_back_arrow</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="StudentSetUpTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Widget.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/background_radio_button</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:drawableEnd">@drawable/ic_radio_button</item>
        <item name="android:textColor">@color/radio_button_text_color_selector</item>
        <item name="android:textAppearance">@style/StudentSetUpTextStyle</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="TextAppearance.TextButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WeekDayTitleTextStyle">
        <item name="android:textColor">@color/common_pink</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
</resources>